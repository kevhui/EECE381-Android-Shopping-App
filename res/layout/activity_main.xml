<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bViewShoppingList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bEditShoppingList"
        android:layout_below="@+id/bEditShoppingList"
        android:onClick="onClickViewShoppingList"
        android:text="View Shopping List" />

    <Button
        android:id="@+id/bCheckoutList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bViewShoppingList"
        android:layout_below="@+id/bViewShoppingList"
        android:onClick="onClickCheckoutList"
        android:text="Checkout List" />

    <Button
        android:id="@+id/bHistory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bCheckoutList"
        android:layout_below="@+id/bCheckoutList"
        android:onClick="onClickHistory"
        android:text="Receipts" />

    <Button
        android:id="@+id/ConnectToDE2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bScanBarcode"
        android:layout_below="@+id/bScanBarcode"
        android:onClick="onClickConnectToDE2"
        android:text="Connect2DE2" />

    <Button
        android:id="@+id/bScanBarcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bHistory"
        android:layout_below="@+id/bHistory"
        android:onClick="onClickBarcodeScanner"
        android:text="Scan Barcode" />

    <Button
        android:id="@+id/bEditShoppingList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/subtext"
        android:layout_marginTop="15dp"
        android:onClick="onClickEditShoppingList"
        android:text="Edit Shopping List" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="@string/subtext"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/app_name"
        android:textSize="30dp" />

</RelativeLayout>