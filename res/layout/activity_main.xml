<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:text="TeamJuanShoppingApp" />
    
    <Button
        android:id="@+id/bEditShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Edit Shopping List" 
        android:onClick="onClickEditShoppingList"/>

    <Button
        android:id="@+id/bViewShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bEditShoppingList"
        android:layout_marginTop="20dp"
        android:text="View Shopping List" 
        android:onClick="onClickViewShoppingList"/>
    
   	<Button
        android:id="@+id/bCheckoutList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bViewShoppingList"
        android:layout_marginTop="20dp"
        android:text="Checkout List" 
        android:onClick="onClickCheckoutList"/>

    <Button
        android:id="@+id/bScanBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Scan Barcode"
		android:onClick="onClickBarcodeScanner"/>
   
</RelativeLayout>
